<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinConsultarCP"
             x:Class="XamarinConsultarCP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image Source="ctt.png" x:Name="Logo"/>
        <Entry Placeholder="Insira o CP" PlaceholderColor="#FFBF00" BackgroundColor="White" x:Name="CP"/>
        <Button Text="Procurar CP" TextColor="White" BackgroundColor="#00416B" x:Name="Btn"/>
        <Label Text="Welcome to Xamarin.Forms!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" x:Name="Result"/>
    </StackLayout>

</ContentPage>
